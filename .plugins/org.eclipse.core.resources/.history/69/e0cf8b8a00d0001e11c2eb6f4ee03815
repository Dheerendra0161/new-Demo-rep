package api.endPoints;

import static io.restassured.RestAssured.*;
import static org.hamcrest.Matchers.*;

import io.restassured.http.ContentType;
import io.restassured.response.Response;

public class UserEndPoints {

	public static Response createUser(User payload) {
		Response response = given().contentType(ContentType.JSON).accept(ContentType.JSON).accept(ContentType.JSON)
				.when().post(Routes.post_URL);
		return response;

	}

	public static Response getUser(int id) {
		return given().pathParam("id", id).get(GET_URL);
	}

	public static Response updateUser(int id, User payload) {
		return given().contentType(ContentType.JSON).pathParam("id", id).body(payload).put(PUT_URL);
	}

	public static Response deleteUser(int id) {
		return given().pathParam("id", id).delete(DELETE_URL);
	}

}
