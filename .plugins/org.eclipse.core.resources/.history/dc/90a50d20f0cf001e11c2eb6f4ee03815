package restAssured7;

import static io.restassured.RestAssured.given;

import org.json.JSONObject;
import org.testng.annotations.Test;

import com.github.javafaker.Faker;

public class UpdateUsers {
	int id = 0;

	@Test
	void createUsers() {
		Faker faker = new Faker();
		JSONObject obj = new JSONObject();
		obj.put("name", faker.name().fullName());
		obj.put("gender", "Fale");
		obj.put("email", faker.internet().emailAddress());
		obj.put("status", "Active");
		String token = "9f378887517c46948b9c0e768423abb96c0dcf03b61c7b3bd40af81f74d8ff6d";

		given().headers("Authorization", "Bearer " + token) // Corrected the header key to "Authorization"
				.contentType("application/json").pathParam("id", id).body(obj.toString()).put("https://gorest.co.in/public/v2/users").then()
				.statusCode(201).log().all();

		
	}
}
